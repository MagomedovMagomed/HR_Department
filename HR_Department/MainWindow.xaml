<Window x:Class="HR_Department.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department"
        mc:Ignorable="d"
        Title="СМП" Height="550" Width="800" ResizeMode="NoResize" Icon="/Resources/logo.png" WindowStartupLocation="CenterScreen">
    <Grid MinWidth="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="164*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FFA52935" Margin="0,-1,0,0">
            <Image Width="179" Height="110" ScrollViewer.CanContentScroll="True" Source="Resources/minilogo.png" Margin="-30"/>
            <StackPanel Margin="40 0 0 0"  Width="521">
                <TextBlock Text="Городская станция" Margin="0 15 0 0" Width="239" FontSize="24" Height="30" Foreground="White" />
                <TextBlock Text="Скорой медицинской помощи" Width="512" Margin="0 0 0 10" FontSize="36" Height="54" Foreground="White" />
            </StackPanel>
        </StackPanel>
        <Frame Name="FrmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
