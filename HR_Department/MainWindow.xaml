<Window x:Class="HR_Department.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department"
        mc:Ignorable="d"
        Title="СМП" Height="800" Width="1300" ResizeMode="NoResize" Icon="/Resources/logo.png" WindowStartupLocation="CenterScreen">
    <Grid MinWidth="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="164*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FFA52935" Margin="0,-1,0,0">
            <Image Width="179" Height="110" ScrollViewer.CanContentScroll="True" Source="Resources/minilogo.png" Margin="-30"/>
            <StackPanel Margin="40 0 0 0"  Width="1000">
                <TextBlock Text="Городская станция" Margin="0 15 0 0" Width="440" FontSize="34" Height="40" Foreground="White" />
                <TextBlock Text="Скорой медицинской помощи" Width="1000" Margin="0 20 0 10" FontSize="66" Height="80" Foreground="White" />
            </StackPanel>
        </StackPanel>
        <Frame Name="FrmMain" NavigationUIVisibility="Hidden" Grid.RowSpan="2" Margin="0,191,0,0"/>
    </Grid>
</Window>
