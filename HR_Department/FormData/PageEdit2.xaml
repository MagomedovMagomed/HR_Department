<Page x:Class="HR_Department.FormData.PageEdit2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HR_Department.FormData"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEdit2">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" Width="auto" FontWeight="Bold" FontSize="22" Content="Телефон"></Label>
        <Label Grid.Column="0" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="auto" FontWeight="Bold" FontSize="22" Content="СНИЛС"></Label>
        <Label Grid.Column="0" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Width="auto" FontWeight="Bold" FontSize="22" Content="Электронная" Margin="0,17,0,0"/>
        <Label Grid.Column="0" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Width="auto" FontWeight="Bold" FontSize="22" Content="почта" Margin="0,56,0,0"/>
        <Label Grid.Column="0" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="auto" FontWeight="Bold" FontSize="22" Content="Примечание"/>
        <Label Grid.Column="2" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="auto" FontWeight="Bold" FontSize="22" Content="Результаты встречи"></Label>
        <Label Grid.Column="2" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="auto" FontWeight="Bold" FontSize="22" Content="Подстанция" ></Label>
        <Label Grid.Column="2" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Top" Width="auto" FontWeight="Bold" FontSize="22" Content="Стаж Кем? Где?" Margin="0,31,0,0"></Label>
        <Label Grid.Column="2" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" Width="auto" FontWeight="Bold" FontSize="22" Content="Сколько?" Margin="0,47,0,0"></Label>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="0" Width="120" x:Name="Surename" Text="{Binding Nazvanie}"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="1" Width="120" x:Name="Name" Text="{Binding Time}"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="0" Width="120" x:Name="Document" Text="{Binding Ostatok}"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="2" Width="120" x:Name="Lastname" Text="{Binding Poster}"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Row="3" Width="162" x:Name="Note" Text="{Binding Nazvanie}"  Height="92"/>
        <Button x:Name="Out" Grid.Column="2" Content="Выход" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Height="46" Width="90" FontSize="20" FontWeight="Bold" Margin="-130 0 0 0" Background="#FFA52935" Click="Out_Click"/>
        <Button x:Name="Save" Grid.Column=" 3" Content="Сохранить" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Height="46" Width="90" FontSize="20" FontWeight="Bold" Background="#FF8BDF67" Click="Save_Click"/>
        <Button x:Name="Back" Grid.Column="2" Content="Прошлая" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="46" Width="115" FontSize="20" FontWeight="Bold" Margin="90 0 0 0" Background="#00000000" Click="Back_Click"/>
        <ComboBox x:Name="Post" Grid.Column="3" HorizontalAlignment="Center" Margin="0,40,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="Post_Copy" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="120"/>
    </Grid>
</Page>
